#include <stdio.h>

int main(void) {
  double arr[3][3];
  double ark[2][2], ark1[2][2];
  int x,y;
  double main = 0.0, pob = 0.0;
  printf("Введите значения матрицы: \n");
  for (int x = 0; x < 3; x++){ 
    for (int y = 0; y < 3; y++){
      scanf("%lf",&arr[x][y]);
    }
  }
  for(x = 0; x < 3; x++){
    main += arr[1][1];
    pob += arr[1][3-x-1];
  }
  printf("main =  %lf\n",main);
  printf("pob =  %lf\n",pob);
